<div class='form-wrapper'>
  <div class='sign-in-form'>
    <h2>Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.password_field :password, placeholder: 'Password', autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field" style="display: inline; width: 100%">
          <%= f.check_box :remember_me, style: "margin: 0;" %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
